      "html": "<script>\n    let switching = false;\n    let galleryItems = [\n        {\n            \"id\": \"Id2f5Y9dq1g\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"pzC7JfukhUM\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"ystlZBTbKiY\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"DOb-2jd0sbc\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"k_4m9_0PO3Q\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"NFB5zdUvb-c\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"xsFxnW9_KZ0\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"dSTalS8QzTg\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        },\n        {\n            \"id\": \"z7tQUhBVOrY\",\n            \"url\": \"/img/uploads/salao.jpeg\",\n            \"thumb\": \"/img/uploads/salao.jpeg\"\n        }\n    ];\n\n    function updateGallery() {\n        const galleryCoreImgs = document.querySelectorAll('.gallery__core img, .gallery__bg img');\n        for (let i = 0; i < galleryCoreImgs.length; i++) {\n            galleryCoreImgs[i].src = galleryItems[0].url;\n        }\n\n        const galleryTrack = document.querySelector('.gallery__track');\n        galleryTrack.innerHTML = '';\n\n        galleryItems.forEach((item, index) => {\n            const galleryTrackItem = document.createElement('div');\n            galleryTrackItem.className = `gallery__track__item ${index === 0 ? 'active' : ''}`;\n            galleryTrackItem.innerHTML = `\n        <img src=\"${item.thumb}\" data-full=\"${item.url}\" alt=\"\">\n      `;\n            galleryTrack.appendChild(galleryTrackItem);\n        });\n    }\n\n    window.onload = function() {\n\n        updateGallery();\n    \n        const galleryTrack = document.querySelector('.gallery__track');\n        galleryTrack.addEventListener('click', (event) => {\n            if (!switching) {\n                switching = true;\n    \n                const galleryTrackItem = event.target.closest('.gallery__track__item');\n                galleryTrackItem.classList.add('active');\n                const siblings = Array.from(galleryTrackItem.parentNode.children);\n                siblings.forEach((sibling) => {\n                    if (sibling !== galleryTrackItem) {\n                        sibling.classList.remove('active');\n                    }\n                });\n    \n                const oldBGImg = document.querySelector('.gallery__bg img');\n                const oldImg = document.querySelector('.gallery__core img');\n                const newImg = galleryTrackItem.querySelector('img').dataset.full;\n                const newImgElement = document.createElement('img');\n                newImgElement.classList.add('slide-in');\n                newImgElement.src = newImg;\n    \n                const newBGImgElement = document.createElement('img');\n                newBGImgElement.classList.add('fade-in');\n                newBGImgElement.src = newImg;\n    \n                const galleryCore = document.querySelector('.gallery__core');\n                galleryCore.appendChild(newImgElement);\n    \n                const galleryBG = document.querySelector('.gallery__bg');\n                galleryBG.appendChild(newBGImgElement);\n    \n                setTimeout(() => {\n                    newImgElement.classList.add('shift-up');\n                    oldImg.classList.add('shift-up');\n                    oldBGImg.classList.add('fade-out');\n                    newBGImgElement.classList.add('fading');\n                    setTimeout(() => {\n                        galleryCore.removeChild(oldImg);\n                        galleryBG.removeChild(oldBGImg);\n                        newImgElement.classList.remove('slide-in', 'shift-up');\n                        newBGImgElement.classList.remove('fade-in', 'fading');\n                        switching = false;\n                    }, 400);\n                }, 10);\n            }\n        })\n    }\n</script>\n<style>\n    html,\n    body {\n        height: 100%;\n    }\n\n    body {\n        display: flex;\n        justify-content: center;\n        align-items: center;\n        font-family: 'Poppins', sans-serif;\n    }\n\n    .branding {\n        position: fixed;\n        bottom: 10px;\n        right: 10px;\n    }\n\n    .branding .img {\n        width: 50px;\n    }\n\n    .gallery {\n        display: flex;\n        flex-direction: column;\n        align-items: center;\n        max-width: 100%;\n    }\n\n    .gallery__bg {\n        opacity: 0.5;\n        position: absolute;\n        z-index: 0;\n        top: 0;\n        left: 0;\n        width: 100%;\n        height: 100%;\n        overflow: hidden;\n    }\n\n    .gallery__bg img {\n        width: 105%;\n        height: 105%;\n        object-fit: cover;\n        object-position: center center;\n        filter: blur(5px);\n        position: absolute;\n        top: -2.5%;\n        left: -2.5%;\n        z-index: 2;\n    }\n\n    .gallery__bg img.fade-in {\n        z-index: 1;\n    }\n\n    .gallery__bg img.fade-out {\n        transition: opacity 400ms;\n        opacity: 0;\n    }\n\n    .gallery__search {\n        position: relative;\n        z-index: 1;\n        display: flex;\n        margin-bottom: 10px;\n        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);\n    }\n\n    .gallery__search label {\n        background: #333;\n        color: white;\n        padding: 11px 10px 10px;\n    }\n\n    .gallery__search input {\n        appearance: none;\n        -webkit-appearance: none;\n        border: none;\n        padding: 1px 6px 0;\n        font-family: 'Poppins', sans-serif;\n        font-size: 16px;\n    }\n\n    .gallery__search input:focus {\n        outline: none;\n        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.5);\n    }\n\n    .gallery__main {\n        position: relative;\n        z-index: 1;\n        margin: 0 75px 0 20px;\n        width: 520px;\n        max-width: calc(100% - 95px);\n    }\n\n    .gallery__core {\n        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);\n        overflow: hidden;\n        width: 100%;\n        padding-top: 100%;\n        position: relative;\n    }\n\n    .gallery__core img {\n        position: absolute;\n        top: 0;\n        left: 0;\n        width: 100%;\n        height: 100%;\n        object-fit: cover;\n        object-position: center center;\n        transform: translateY(0);\n    }\n\n    .gallery__core img.slide-in {\n        top: 100%;\n    }\n\n    .gallery__core img.shift-up {\n        transition: transform 400ms;\n        transform: translateY(-100%);\n    }\n\n    .gallery__track {\n        position: absolute;\n        top: 10px;\n        right: 0;\n        transform: translate(60px, 0);\n        display: flex;\n        flex-direction: column;\n        align-items: center;\n    }\n\n    .gallery__track__item {\n        width: 43px;\n        height: 43px;\n        cursor: pointer;\n        margin-bottom: 10px;\n        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);\n        overflow: hidden;\n        border-radius: 100%;\n        transition: transform 350ms;\n    }\n\n    .gallery__track__item img {\n        width: 100%;\n        height: 100%;\n        object-fit: cover;\n        object-position: center center;\n    }\n\n    .gallery__track__item:hover {\n        transform: scale(1.2);\n    }\n\n    .gallery__track__item.active {\n        width: 40px;\n        height: 40px;\n        border: 3px solid white;\n    }\n</style>\n\n\n<div class=\"gallery\">\n    <div class=\"gallery__bg\"><img src=\"#\" /></div>\n    <div class=\"gallery__main\">\n        <div class=\"gallery__core\"><img src=\"#\" /></div>\n        <div class=\"gallery__track\"></div>\n    </div>\n</div>"
    }
